+PHPAPI void make_sha256_digest(char *sha256str, unsigned char *digest)
+{
+	int i;
+
+	for (i = 0; i < 32; i++) {
+		sprintf(sha256str, "%02x", digest[i]);
+		sha256str += 2;
+	}
+
+	*sha256str = '\0';
